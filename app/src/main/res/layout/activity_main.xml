<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:fontFamily="@font/chewyregular"

        android:gravity="center"
        android:shadowColor="#9C2D2D"
        android:text="F O O D S"
        android:textAllCaps="false"
        android:textColor="#1B014A"
        android:textSize="34sp"
        />

    <TextView
        android:id="@+id/textView_chosen_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#858585"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:shadowColor="#590E0E"
        android:text="ADDRESS"
        android:textAllCaps="false"
        android:textColor="#140432"
        android:textSize="20sp"
        android:layout_below="@id/textView_food"
        />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_above="@id/bottomNav"
        android:layout_below="@+id/textView_chosen_address"
        >

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_navbar"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_dark_background"

        app:itemTextColor="@color/bottom_nav_color"
        app:itemIconTint="@color/bottom_nav_color"/>




</RelativeLayout>