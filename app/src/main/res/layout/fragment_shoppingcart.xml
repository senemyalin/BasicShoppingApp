<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_shoppingcart_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            >

        <TextView
            android:id="@+id/txt_shoppingcart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Some Item"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/txt_shoppingcart_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Some Item"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_shoppingcart_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Some Item"
            android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"
            >

            <ImageView
                android:id="@+id/img_shoppingcart_add"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:layout_gravity="left"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_add" />

            <TextView
                android:id="@+id/row_install_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/teal_200"
                android:padding="10dp"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/img_shoppingcart_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:src="@android:drawable/presence_busy" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>